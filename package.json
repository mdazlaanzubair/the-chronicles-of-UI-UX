{
  "name": "the-chronicles-of-ui-ux",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",

    "ssr:dev": "node server",
    "ssr:build": "npm run build:client && npm run build:server",
    "ssr:build:client": "vite build --outDir dist/client",
    "ssr:build:server": "vite build --ssr src/entry-server.jsx --outDir dist/server",
    "ssr:preview": "cross-env NODE_ENV=production node server"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.5",
    "compression": "^1.8.0",
    "express": "^5.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-fast-marquee": "^1.6.5",
    "react-icons": "^5.5.0",
    "react-router-dom": "^6.30.0",
    "sirv": "^3.0.1",
    "tailwindcss": "^4.1.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.5.0",
    "daisyui": "^5.0.35",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "cross-env": "^7.0.3",
    "vite": "^6.3.5"
  }
